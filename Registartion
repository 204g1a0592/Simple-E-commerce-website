        <script>
             function validate(form)
            {
                var username=form.username.value;
                var password=form.password.value;
                var mail=form.mail.value;
                var age=form.age.value;
                var mobile=form.mymobile.value;
                var address=form.add.value;
                if(username.length===0)
                {
                    alert("You must have enter a valid Username");
                    return false;
                }
                if(password.length===0)
                {
                    alert("You must have enter a valid password");
                    return false;
                }
                if(mail.length===0)
                {
                    alert("You must enter a valid email");
                    return false;
                }
                if(age.length===0)
                {
                    alert("You must enter age");
                    return false;
                }
                if(mobile.length===0)
                {
                    alert("You must enter mobile number");
                    return false;
                }
                if(address.length===0)
                {
                    alert("You must enter address");
                    return false;
                }
            }
        
        </script>
